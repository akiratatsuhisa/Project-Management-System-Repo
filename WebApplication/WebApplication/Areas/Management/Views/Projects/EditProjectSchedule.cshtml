@model WebApplication.Models.ProjectSchedule

@{
    ViewData["Title"] = "Edit Project Schedule - " + Model.Id;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3 class="card-title">Sửa tiến trình đồ án - @Model.Id</h3>
                <p class="card-subtitle"></p>
            </div>
            <div class="card-body">

                <form method="post" asp-action="EditProjectSchedule">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group bmd-form-group">
                                <label asp-for="Name" class="bmd-label-floating"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group bmd-form-group">
                                <label asp-for="Description" class="bmd-label-floating"></label>
                                <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group bmd-form-group">
                                <label asp-for="ExpiredDate" class="bmd-label-floating"></label>
                                <input asp-for="ExpiredDate" class="form-control" />
                                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Sửa</button>
                            <a class="btn btn-outline-primary" asp-action="Index">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}