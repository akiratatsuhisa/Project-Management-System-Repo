@model IEnumerable<Project>

@{
    ViewData["Title"] = "Index";
    Student student = @ViewBag.Student;
}
<div class="section">
    <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
            <h2 class="title">Danh sách đồ án cá nhân</h2>
            <div class="description">
                <dl class="row">
                    <dt class="col-2">
                        MSSV:
                    </dt>
                    <dd class="col-10">
                        @student.StudentCode
                    </dd>
                    <dt class="col-2">
                        Tên:
                    </dt>
                    <dd class="col-10">
                        @student.ApplicationUser.LastName @student.ApplicationUser.FirstName
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tên đồ án
                    </th>
                    <th>
                        Loại đồ án
                    </th>
                    <th>
                        Giảng viên
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ProjectType.Name
                        </td>
                        <td>
                            @item.Lecturer.ApplicationUser.LastName @item.Lecturer.ApplicationUser.FirstName
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
