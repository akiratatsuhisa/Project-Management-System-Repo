@model IEnumerable<Project>

@{
    ViewData["Title"] = "Index";
}
<div class="section">
    <div>
        <h3 class="m-3 m-md-2 text-center">
            Danh sách đồ án cá nhân
        </h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tên đồ án
                    </th>
                    <th>
                        Loại đồ án
                    </th>
                    <th>
                        Giảng viên
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ProjectType.Name
                        </td>
                        <td>
                            @item.Lecturer.ApplicationUser.LastName @item.Lecturer.ApplicationUser.FirstName
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
