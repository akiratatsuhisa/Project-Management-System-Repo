@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<li class="dropdown nav-item">
    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
        <i class="material-icons">person</i> Account
    </a>
    <div class="dropdown-menu dropdown-with-icons">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                <i class="material-icons">layers</i> @User.Identity.Name
            </a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a href="javascript: void(0)" onclick="this.parentNode.submit()" class="dropdown-item">
                    <i class="material-icons">layers</i> Logout
                </a>
            </form>
        }
        else
        {
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">
                <i class="material-icons">content_paste</i> Login
            </a>
        }
    </div>
</li>